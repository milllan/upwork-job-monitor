{
  "manifest_version": 2,
  "name": "Upwork Job Monitor (MV2 - Direct BG Attempt)",
  "version": "0.3.0",
  "description": "Monitors Upwork for new jobs and sends notifications.",
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "storage",
    "cookies",
    "notifications",
    "alarms",
    "webRequest",
    "webRequestBlocking",
    "*://*.upwork.com/*",
    "tabs"
  ],
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" },
  "browser_specific_settings": {
    "gecko": {
      "id": "your-addon-id@wpspeedopt.net"
    }
  },
  "web_accessible_resources": ["audio/notification.mp3", "icons/icon48.png"]
}
